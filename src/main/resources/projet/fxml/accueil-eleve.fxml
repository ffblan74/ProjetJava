<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox spacing="20" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="projet.controleurs.eleve.AccueilEleveController"
      style="-fx-background-color: #e0e0e0;"
      prefHeight="600.0"> <padding>
    <Insets top="15" right="15" bottom="15" left="15"/> </padding>

    <VBox spacing="15" HBox.hgrow="ALWAYS"> <HBox spacing="20" alignment="CENTER"
                                                  style="-fx-background-color: #6a1b9a; -fx-padding: 10; -fx-background-radius: 8;"> <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
        <Label fx:id="labelBienvenue" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/> <Label fx:id="labelStats" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;"/> </VBox>
    </HBox>

        <HBox alignment="CENTER" spacing="15"
              style="-fx-background-color: #d1c4e9; -fx-padding: 10; -fx-background-radius: 8;"> <Button text="⬅" onAction="#semainePrecedente"
                                                                                                         style="-fx-background-color: #6a1b9a; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 50px; -fx-min-height: 35px; -fx-background-radius: 5;"/> <Label fx:id="labelSemaine" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;"/> <Button text="➡" onAction="#semaineSuivante"
                                                                                                                                                                                                                                                                                                                                                                                 style="-fx-background-color: #6a1b9a; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 50px; -fx-min-height: 35px; -fx-background-radius: 5;"/> </HBox>

        <HBox spacing="10" alignment="CENTER"
              style="-fx-background-color: #e8eaf6; -fx-padding: 8; -fx-background-radius: 8;"> <ComboBox fx:id="filtreMatiere" promptText="Filtrer par matière" style="-fx-font-size: 13px; -fx-pref-width: 180;"/> </HBox>

        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" prefHeight="300.0" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8;">
            <content>
                <GridPane fx:id="grilleEmploi" hgap="5" vgap="5"
                          style="-fx-background-color: white; -fx-padding: 8; -fx-border-radius: 8;"> </GridPane>
            </content>
        </ScrollPane>

        <HBox alignment="CENTER" spacing="10"
              style="-fx-background-color: #6a1b9a; -fx-padding: 10; -fx-background-radius: 8;"> <Button text="Déconnexion" onAction="#deconnexion"
                                                                                                         style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 5;"/> </HBox>
    </VBox>

    <VBox spacing="8" alignment="TOP_CENTER" style="-fx-background-color: #e0f2f7; -fx-padding: 10; -fx-background-radius: 5;" minWidth="220" maxWidth="220"> <Label text="Notifications" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #01579B;"/> <Label fx:id="unreadNotificationsCountLabel" style="-fx-font-size: 12px; -fx-text-fill: #D32F2F; -fx-font-weight: bold;"/> <ComboBox fx:id="filtreStatutNotifications" promptText="Filtrer statut"
                                                                                                                                                                                                                                                                                                                                                                                                             style="-fx-font-size: 11px; -fx-pref-width: 130;" onAction="#filtrerNotifications"/>

        <ListView fx:id="notificationsListView" VBox.vgrow="ALWAYS" prefHeight="250.0" style="-fx-background-color: white;"/> <Button text="Marquer tout comme lu" onAction="#marquerToutCommeLu"
                                                                                                                                      style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 11px; -fx-padding: 6 12; -fx-background-radius: 3;"/> </VBox>
</HBox>