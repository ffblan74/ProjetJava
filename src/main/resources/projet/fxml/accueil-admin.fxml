<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.util.Callback?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="projet.controleurs.admin.AccueilAdminController"
      spacing="10" alignment="TOP_LEFT"> <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
</padding>

    <Label fx:id="nomUtilisateurLabel" text="Bonjour, [Nom]" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="creerCoursButton" text="Créer un cours" onAction="#handleCreerCours" />
        <Button fx:id="modifierEmploiDuTempsButton" text="Modifier Emploi du Temps" onAction="#handleModifierEmploiDuTemps" />
        <Button fx:id="gererCreneauxButton" text="Gérer Créneaux" onAction="#handleGererCreneaux" />
        <Button fx:id="affecterEnseignantsButton" text="Affecter Enseignants" onAction="#handleAffecterEnseignants" />
        <Button fx:id="gererSallesButton" text="Gérer Salles" onAction="#handleGererSalles" />
        <Button fx:id="controlerConflitsButton" text="Contrôler Conflits" onAction="#handleControlerConflits" />
        <Button fx:id="statistiquesSallesButton" text="Stats Salles" onAction="#handleStatistiquesSalles" />
        <Button fx:id="statistiquesEnseignantsButton" text="Stats Enseignants" onAction="#handleStatistiquesEnseignants" />
    </HBox>

    <TableView fx:id="tableViewUtilisateurs" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdUtilisateur" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="120"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/> <TableColumn fx:id="colRole" text="Rôle" prefWidth="100"/>
            <TableColumn text="Actions" fx:id="colActions" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="BOTTOM_RIGHT"> <Button fx:id="gererUtilisateursButton" text="Créer Utilisateur" onAction="#handleGererUtilisateurs" />
    </HBox>
</VBox>