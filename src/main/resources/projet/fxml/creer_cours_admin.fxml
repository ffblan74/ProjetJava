<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5;"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="projet.controleurs.admin.CreerCoursAdminController"> <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>
    <children>
        <Label text="Créer / Modifier un Cours (Admin)" textFill="#2196F3">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" /> <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Matière:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="matiereComboBox" prefWidth="200.0" promptText="Choisir une matière" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Classe / Groupe:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="classeComboBox" prefWidth="200.0" promptText="Choisir une classe" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Salle:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="salleComboBox" prefWidth="200.0" promptText="Choisir une salle" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker fx:id="datePicker" prefWidth="200.0" promptText="Sélectionner une date" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Heure début:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="heureDebutField" promptText="HH:mm (Ex: 08:00)" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Heure fin:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="heureFinField" promptText="HH:mm (Ex: 09:30)" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Description (facultative) :" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextArea fx:id="descriptionArea" prefHeight="80.0" promptText="Description/sujet du cours" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label text="Enseignant:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <ComboBox fx:id="enseignantComboBox" prefWidth="200.0" promptText="Sélectionner un enseignant" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        </GridPane>
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button onAction="#handleSauvegarderCours" text="Enregistrer Cours" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button onAction="#handleAnnuler" text="Annuler" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
            </children>
        </HBox>
    </children>
</VBox>