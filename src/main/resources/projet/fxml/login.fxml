<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="350.0" spacing="15.0"
      style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="projet.controleurs.LoginController">

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>

    <Label text="Connexion"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333366;"/>
    <Label text="Identifiant:" style="-fx-text-fill: #333333;"/>
    <TextField fx:id="identifiantTextField" promptText="Votre identifiant"
               style="-fx-border-color: green; -fx-border-radius: 5px; -fx-padding: 8px;"/>

    <Label text="Mot de passe:" style="-fx-text-fill: #333333;"/>
    <PasswordField fx:id="motDePassePasswordField" promptText="Votre mot de passe"
                   style="-fx-border-color: green; -fx-border-radius: 5px; -fx-padding: 8px;"/>

    <Button fx:id="connexionButton" text="Se connecter" onAction="#handleConnexion"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

    <Label fx:id="messageErreurLabel" text="" style="-fx-text-fill: #a34c6c; -fx-font-style: italic;"/>

</VBox>