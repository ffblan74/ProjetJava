<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="TOP_CENTER"
      spacing="15"
      prefWidth="700"
      prefHeight="650">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Emploi du temps de l'enseignant"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333366; -fx-margin-bottom: 20px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Choisissez un jour :"/>
    </HBox>

    <ScrollPane fitToWidth="true" prefHeight="400">
        <VBox fx:id="coursContainer" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </ScrollPane>

</VBox>