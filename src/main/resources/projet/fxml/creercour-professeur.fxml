<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projet.controleurs.professeur.CreerCourController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Créer un nouveau cours" style="-fx-font-size: 18px;">
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </Label>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150.0" halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="250.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="70.0" /> <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                    </rowConstraints>

                    <Label text="Matière :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="matiereField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Description (facultative) :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="descriptionArea" prefHeight="60.0" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Salle :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="salleComboBox" prefWidth="250.0" promptText="Choisir une salle" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Jour :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="jourComboBox" prefWidth="250.0" promptText="Sélectionner un jour" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Heure Début (HH:mm) :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="heureDebutField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Heure Fin (HH:mm) :" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="heureFinField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Classe (Groupe) :" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="groupeComboBox" prefWidth="250.0" promptText="Choisir un groupe" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                </GridPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCreerCours" text="Créer le cours"/>
                        <Button mnemonicParsing="false" onAction="#handleRetour" text="Retour"/>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>