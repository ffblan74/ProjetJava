<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projet.controleurs.admin.AccueilUtilisateurController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="860.0" spacing="10.0">
                    <children>
                        <Label fx:id="nomUtilisateurLabel" text="Bonjour, [Nom Utilisateur]" textFill="BLACK">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#handleDeconnexion" text="Déconnexion" />
                    </children>
                </HBox>
                <Label text="Panneau d'Administration" textFill="#e4b01e">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="860.0" spacing="20.0">
                    <Button fx:id="btnGererUtilisateurs" onAction="#handleGererUtilisateurs" prefHeight="40.0" prefWidth="200.0" text="Gérer les Utilisateurs" styleClass="action-button">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnGererCours" onAction="#handleGererCours" prefHeight="40.0" prefWidth="200.0" text="Gérer les Cours" styleClass="action-button">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnGererSalles" onAction="#handleGererSalles" prefHeight="40.0" prefWidth="200.0" text="Gérer les Salles" styleClass="action-button">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnGererEmploiDuTemps" onAction="#handleGererEmploiDuTemps" prefHeight="40.0" prefWidth="200.0" text="Gérer Emploi du Temps" styleClass="action-button">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                </HBox>
                <Separator prefWidth="200.0" />

                <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="TOP_CENTER" spacing="10.0">
                            <children>
                                <Label text="Liste des Utilisateurs" textFill="BLACK">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="tableViewUtilisateurs" prefHeight="400.0" prefWidth="860.0">
                                    <columns>
                                        <TableColumn fx:id="colIdUtilisateur" prefWidth="50.0" text="ID" />
                                        <TableColumn fx:id="colNom" prefWidth="150.0" text="Nom" />
                                        <TableColumn fx:id="colPrenom" prefWidth="150.0" text="Prénom" />
                                        <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
                                        <TableColumn fx:id="colRole" prefWidth="120.0" text="Rôle" />
                                        <TableColumn fx:id="colActions" prefWidth="120.0" text="Actions" />
                                    </columns>
                                </TableView>
                                <Button fx:id="creerUtilisateurButton" onAction="#handleCreerUtilisateur" text="Créer un nouvel utilisateur" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</AnchorPane>